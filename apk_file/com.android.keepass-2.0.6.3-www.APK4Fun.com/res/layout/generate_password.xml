            <Button android:id="@id/btn_length16" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60.0dip" android:text="@string/generate_16" android:layout_below="@id/length_label" android:layout_alignParentRight="true" />
            <Button android:id="@id/btn_length12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60.0dip" android:text="@string/generate_12" android:layout_toLeftOf="@id/btn_length16" android:layout_alignTop="@id/btn_length16" />
            <Button android:id="@id/btn_length8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60.0dip" android:text="@string/generate_8" android:layout_toLeftOf="@id/btn_length12" android:layout_alignTop="@id/btn_length16" />
            <Button android:id="@id/btn_length6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60.0dip" android:text="@string/generate_6" android:layout_toLeftOf="@id/btn_length8" android:layout_alignTop="@id/btn_length16" />
