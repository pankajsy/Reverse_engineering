<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:id="@id/accept_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/accept" android:layout_alignParentBottom="true" />
