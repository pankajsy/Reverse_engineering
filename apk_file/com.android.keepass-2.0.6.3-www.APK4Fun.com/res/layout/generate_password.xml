            <CheckBox android:id="@id/cb_underline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/underline" android:layout_below="@id/cb_minus" />
            <CheckBox android:id="@id/cb_space" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/space" android:layout_below="@id/cb_underline" />
            <CheckBox android:id="@id/cb_specials" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/special" android:layout_below="@id/cb_space" />
